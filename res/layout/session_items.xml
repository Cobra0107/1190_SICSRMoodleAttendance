<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/session_item_img_status"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:paddingTop="10dp"
        android:src="@drawable/not_taken" />

    <TextView
        android:id="@+id/session_items_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="MCT Div A" />

    <TextView
        android:id="@+id/session_items_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="25.09.2014(Thu)" />

    <TextView
        android:id="@+id/session_items_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="testing" />
    
</LinearLayout>
